// reversing array elemnts using another array(in-place)
#include<iostream>
#include<vector>
using namespace std;

int main(){
    vector<int>v(5);
    cout << "enter 5 elements in to array: \n";
    for(int i=0;i<5;i++){
        cin>>v[i];
    }
    vector<int>revarr(5);
    for(int i=0;i<5;i++){
        revarr[i]=v[5-i-1];
    }
    cout<< "array after reversing: \n";
    for(int i=0;i<5;i++){
        cout << revarr[i] << " ";
    }
	return 0;
}
