//V.i topic in stl
//pairs exist in utility library
#include <iostream>
#include<utility>
using namespace std;
void expPair(){
  //using pairs
  // pair<int,int>p={1,2};
  // cout<<p.first<<" "<<p.second;

  //using nested pairs, : inserting multiple elements in pairs
  // pair<int,pair<int,int>>p={1,{2,3}};
  // cout<<p.first<<" "<<p.second.first<<" "<<p.second.second;

  //using pairs for arrays: using pairs as datatype
  pair<int,int>arr[]={{1,2},{3,4},{5,6}};
  cout<<arr[1].second<<endl;
  cout<<arr[0].first;
}
int main() {
  expPair();
}
