    //using erase function to erase a specific range(or set) of elements in a list
    list<int> ls{1,3,4,5,6,7};
    for(auto it =ls.begin(); it!= ls.end(); ++it){
        if(*it % 2 == 0){
            it=ls.erase(it);
        }
        else{
            ++it;
        }
    }
    cout<< "the elements at odd indices are: ";
    for(auto it : ls){
        cout<< it <<" ";
    }

    //using copy function
    /*
