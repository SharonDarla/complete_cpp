//declaring a list and using it
#include<iostream>
#include<list>
using namespace std;

void display(list<int> &lst){    
  list<int> :: iterator it;   // iterator to point to the elements of the list
  for( it = lst.begin(); it != lst.end(); it++){
    cout<<*it<<" ";
  }
}

int main(){
  list<int> list1; //empty list of len-0
  list1.push_back(5);
  list1.push_back(7);
  list1.push_back(8);
  list1.push_back(9);
  list1.push_back(2);
  display(list1);
}

